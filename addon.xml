<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.audio.guisounds" name="Kodi GUI Sounds" version="1.1.0" provider-name="Your Name" description="Adds custom sounds to Kodi's GUI actions." >
  <requires>
    <import addon="xbmc.python" version="3.0.0"/> 
  </requires>
  <extension point="xbmc.python.plugin" library="default.py">
    <provides>audio</provides> 
  </extension>
  <sounds>
    <sound name="back">sounds/Back.wav</sound>
    <sound name="click_back">sounds/Click-Back.wav</sound>
    <sound name="click">sounds/Click.wav</sound>
    <sound name="close">sounds/Close.wav</sound>
    <sound name="cursor">sounds/Cursor.wav</sound>
    <sound name="notify">sounds/Notify.wav</sound>
    <sound name="out">sounds/Out.wav</sound>
    <sound name="select">sounds/Select.wav</sound>
    <sound name="shutter">sounds/Shutter.wav</sound>
  </sounds>
</addon>
